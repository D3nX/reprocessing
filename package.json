{
  "name": "ReProcessing",
  "version": "0.1.0",
  "description": "Processing library for Reason",
  "scripts": {
    "start": "_build/native/src/app.native",
    "build": "esy rebel && webpack -d _build/web/src/index.js _build/web/src/app.js",
    "run": "esy rebel && _build/native/src/app.native",
    "editor": "GL_BACKEND=native esy atom .",
    "whereisocamlmerlin": "esy which ocamlmerlin-reason",
    "mlre": "pbpaste | esy refmt -parse ml -print re -use-stdin true -is-interface-pp false",
    "reml": "pbpaste | esy refmt -parse re -print ml -use-stdin true -is-interface-pp false",
    "compileexamples": "./eject.sh && ./compileAllExamples.sh"
  },
  "esy": {
    "build": [
      "rebel",
      "webpack -d _build/web/src/index.js _build/web/src/app.js",
      "echo 'FLG -ppx $matchenv__bin/ppx_matchenv.exe' >> .merlin"
    ]
  },
  "dependencies": {
    "reason": "facebook/reason#esy",
    "rebel": "bsansouci/rebel#esy",
    "reglinterface": "*",
    "reglnative": "*",
    "reglweb": "*",
    "matchenv": "bsansouci/matchenv",
    "bs-platform": "esy-ocaml/bucklescript#esy",
    "tgls-actual": "bsansouci/tgls#esy",
    "tsdl-actual": "bsansouci/tsdl#esy"
  },
  "rebel": {
    "targets": [
      {
        "target": "web",
        "engine": "bucklescript",
        "entry": "src/index.re",
        "unstable_flags": {
          "compile": "-ppx $matchenv__bin/ppx_matchenv.exe -I _build/web/reglweb -I _build/web/reglinterface",
          "link": "-I _build/web/reglweb",
          "envvars": "GL_BACKEND=web",
          "dep": "-ppx $matchenv__bin/ppx_matchenv.exe"
        }
      },
      {
        "target": "native",
        "engine": "native",
        "entry": "src/index.re",
        "unstable_flags": {
          "compile": "-ppx $matchenv__bin/ppx_matchenv.exe -package tgls.tgl3,tsdl -I _build/web/reglinterface -I _build/native/reglnative",
          "link": "-linkpkg -package tgls.tgl3,tsdl -cclib \"$(pkg-config --libs reglnative)\"",
          "envvars": "GL_BACKEND=native",
          "dep": "-ppx $matchenv__bin/ppx_matchenv.exe"
        }
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bsansouci/ocaml-re.git"
  },
  "author": "bsansouci & schmavery",
  "devDependencies": {
    "webpack": "^1.14.0",
    "ocaml": "esy-ocaml/ocaml#esy",
    "@opam-alpha/utop": "*",
    "@opam-alpha/merlin": "*",
    "@opam-alpha/topkg": "*"
  }
}
