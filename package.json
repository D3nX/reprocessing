{
  "name": "ReProcessing",
  "version": "0.1.0",
  "description": "Processing library for Reason",
  "scripts": {
    "start": "_build/native/src/app.native",
    "build": "eval $(dependencyEnv) && nopam && rebel && webpack -d _build/web/src/index.js _build/web/src/app.js",
    "run": "eval $(dependencyEnv) && nopam && rebel && _build/native/src/app.native",
    "top": "eval $(dependencyEnv) && rtop",
    "env": "eval $(dependencyEnv) && env",
    "ocamldep": "eval $(dependencyEnv) && ocamldep",
    "editor": "eval $(dependencyEnv) && GL_BACKEND=native atom .",
    "whereisocamlmerlin": "eval $(dependencyEnv) && which ocamlmerlin-reason",
    "whereisrebel": "eval $(dependencyEnv) && which rebel",
    "mlre": "pbpaste | ./node_modules/reason/refmt_impl.native -parse ml -print re -use-stdin true -is-interface-pp false",
    "reml": "pbpaste | ./node_modules/reason/refmt_impl.native -parse re -print ml -use-stdin true -is-interface-pp false",
    "compileExamples": "./eject.sh && ./compileAllExamples.sh"
  },
  "esy": {
    "build": [
      "rebel -show-actions-run-verbose -verbose -show-error-dependency-paths -brief-error-summary -show-buildable-discovery",
      "echo 'FLG -ppx $matchenv__bin/ppx_matchenv.exe' >> .merlin"
    ]
  },
  "dependencies": {
    "@opam-alpha/merlin": "*",
    "reason": "facebook/reason#esy",
    "rebel": "bsansouci/rebel#esy",
    "reglinterface": "*",
    "reglnative": "*",
    "reglweb": "*",
    "matchenv": "bsansouci/matchenv"
  },
  "rebel": {
    "targets": [
      {
        "target": "web",
        "engine": "bucklescript",
        "entry": "src/index.re",
        "unstable_flags": {
          "compile": "-ppx $matchenv__bin/ppx_matchenv.exe -I _build/web/reglweb -I _build/web/reglinterface",
          "link": "-I _build/web/reglweb",
          "envvars": "GL_BACKEND=web",
          "dep": "-ppx $matchenv__bin/ppx_matchenv.exe"
        }
      },
      {
        "target": "native",
        "engine": "native",
        "entry": "src/index.re",
        "unstable_flags": {
          "compile": "-ppx $matchenv__bin/ppx_matchenv.exe -package tgls.tgl3,tsdl -I _build/web/reglinterface -I _build/native/reglnative",
          "link": "-linkpkg -package tgls.tgl3,tsdl -cclib \"$(pkg-config --libs reglnative)\"",
          "envvars": "GL_BACKEND=native",
          "dep": "-ppx $matchenv__bin/ppx_matchenv.exe"
        }
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bsansouci/ocaml-re.git"
  },
  "author": "bsansouci & schmavery",
  "devDependencies": {
    "webpack": "^1.14.0",
    "ocaml": "esy-ocaml/ocaml#esy",
    "@opam-alpha/utop": "*"
  }
}
